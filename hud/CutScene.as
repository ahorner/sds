package hud{		import flash.display.MovieClip;	import flash.events.Event;		public class CutScene extends MovieClip	{				public function CutScene():void		{			this.stop();			this.addEventListener(Event.ADDED_TO_STAGE, addHandler);		}				protected function addHandler(e:Event):void		{			this.removeEventListener(Event.ADDED_TO_STAGE, addHandler);			this.addEventListener(Event.REMOVED, removeHandler);			this.addEventListener(Event.ENTER_FRAME, everyFrame);			this.play();		}				protected function removeHandler(e:Event):void		{			if (e.target == this)			{				this.removeEventListener(Event.REMOVED, removeHandler);				this.removeEventListener(Event.ENTER_FRAME, everyFrame);			}		}				protected function everyFrame(e:Event):void		{			if (this.currentFrame == this.totalFrames)			{				this.dispatchEvent(new Event(Event.COMPLETE));				stop();			}		}			}}