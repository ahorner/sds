package hud{    import flash.display.Sprite;	import flash.text.TextField;	import flash.utils.Timer;	import flash.events.Event;	import flash.events.TimerEvent;	public class FrameRateViewer extends Sprite	{				private var frameRateText:TextField = null;		private var timer:Timer = null;		private var frameCount:uint = 0;		public function FrameRateViewer()		{			frameRateText = new TextField();			frameRateText.autoSize = 'left';			frameRateText.background = true;			frameRateText.backgroundColor = 0xFFFFFF;			frameRateText.border = true;			frameRateText.borderColor = 0x000000;			this.addChild(frameRateText);			timer = new Timer(1000);			timer.addEventListener(TimerEvent.TIMER,update);			this.addEventListener(Event.ADDED,start);			this.addEventListener(Event.REMOVED,stop);		}		private function start(event:Event):void		{			frameCount = 0;			timer.start();			stage.addEventListener(Event.ENTER_FRAME,countFrame);		}		private function stop(event:Event):void		{			timer.stop();			stage.removeEventListener(Event.ENTER_FRAME,countFrame);		}		private function countFrame(event:Event):void		{			frameCount++;		}		private function update(event:TimerEvent):void		{			frameRateText.text = stage.frameRate + " : " + frameCount;			frameCount = 0;		}	}}