/*SoundEffect.asCreated by: Andrew HornerContents:SoundEffect defines the base class for sound effect played throughout the course of the game. It containsbasic utilities for playing one-time sound effects.*/package sound{		import flash.media.Sound;	import flash.media.SoundChannel;	import flash.media.SoundTransform;	import flash.utils.getDefinitionByName;		public class SoundEffect	{				protected var fxChannel:SoundChannel;				/**********************************************		Constructor method		**********************************************/		public function SoundEffect(fxName:String, fxLoc:Number = 300, fxVolume:Number = 0.7):void		{			var fxSound:Sound = new (Class(getDefinitionByName(fxName)))();			var fxPan:Number = (fxLoc - 300)/300;			var fxTransform:SoundTransform = new SoundTransform(fxVolume, fxPan);			fxChannel = fxSound.play(0, 0, fxTransform);		}		/**********************************************		**********************************************/	}}