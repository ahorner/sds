/*SelectionEvent.asCreated by: Andrew HornerContents:SelectionEvent defines an event type containing information about a menu selection made by the player.*/package menu{		import flash.events.Event;		public class SelectionEvent extends Event	{				protected var _selection:String;				/**********************************************		Constructor method		**********************************************/		public function SelectionEvent(source:Object, useSelection:String = ""):void		{			super("selectEvent", source);			_selection = useSelection;		}				/**********************************************		The following define public methods of the 		SelectionEvent clss		**********************************************/				/**********************************************		Getters and Setters		**********************************************/		public function get selection():String		{			return _selection;		}		/**********************************************		**********************************************/	}}